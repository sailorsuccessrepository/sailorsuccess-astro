---
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  intro?: string;
  collection: 'learn' | 'careers' | 'money' | 'rights' | 'tools';
  filterFn?: (item: any) => boolean;
}

const { title, intro, collection, filterFn } = Astro.props;

const items = await getCollection(collection);
const filtered = filterFn ? items.filter(filterFn) : items;
const sorted = filtered.filter(p => !p.data.draft).sort((a, b) => 
  (b.data.pubDate?.valueOf() || 0) - (a.data.pubDate?.valueOf() || 0)
);
---

<div class="category-index">
  <h1 class="text-2xl font-semibold mb-4">{title}</h1>
  {intro && <p class="intro text-gray-600 dark:text-gray-300">{intro}</p>}
  
  {sorted.length > 0 ? (
    <div class="articles-list grid gap-6">
      {sorted.map(post => (
        <div class="article-item border border-gray-200 dark:border-gray-700 p-6 rounded-lg transition-shadow">
          <h3 class="mb-1">
            <a class="text-blue-600 dark:text-blue-400 hover:underline" href={`/${collection}/${post.slug}`}>{post.data.title}</a>
          </h3>
          {post.data.description && (
            <p class="description text-gray-700 dark:text-gray-300">{post.data.description}</p>
          )}
          <div class="meta mt-3 flex gap-4 text-sm text-gray-500 dark:text-gray-400">
            <span class="date">{post.data.pubDate?.toLocaleDateString()}</span>
            {post.data.readTime && <span class="readtime">{post.data.readTime} min read</span>}
          </div>
        </div>
      ))}
    </div>
  ) : (
    <p class="text-gray-600 dark:text-gray-400">No articles found in this section yet.</p>
  )}
</div>

<style>
  .category-index h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .articles-list {
    display: grid;
    gap: 1.5rem;
  }
  
  .article-item {
    transition: box-shadow 0.2s;
  }
  
  .article-item:hover {
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  }
  
  .article-item h3 {
    margin: 0 0 0.5rem 0;
  }
  
  .description {
    font-size: 0.95rem;
    margin: 0.5rem 0;
  }
  
</style>
