<div class="search-box">
  <input 
    type="text" 
    id="search-input" 
    class="search-input"
    placeholder="Search articles..."
    aria-label="Search articles"
  />
  <div id="search-results" class="search-results"></div>
</div>

<script>
  let cache: any[] | null = null;
  const input = document.getElementById('search-input') as HTMLInputElement;
  const resultsDiv = document.getElementById('search-results') as HTMLDivElement;
  
  input.addEventListener('input', async (e) => {
    const query = (e.target as HTMLInputElement).value.trim().toLowerCase();
    
    if (!query) {
      resultsDiv.innerHTML = '';
      return;
    }
    
    // Fetch index once
    if (!cache) {
      try {
        const res = await fetch('/api/search.json?q=');
        cache = await res.json();
      } catch (err) {
        resultsDiv.innerHTML = '<p style="color: red;">Search unavailable</p>';
        return;
      }
    }
    
    // Filter results
    const results = (cache || []).filter((item: any) => {
      const title = item.title?.toLowerCase() || '';
      const desc = item.excerpt?.toLowerCase() || '';
      const tags = (item.tags || []).map((t: string) => t.toLowerCase()).join(' ');
      return title.includes(query) || desc.includes(query) || tags.includes(query);
    }).slice(0, 8);
    
    // Render results
    if (results.length === 0) {
      resultsDiv.innerHTML = '<p style="padding: 0.5rem; color: #999;">No results</p>';
    } else {
      resultsDiv.innerHTML = results.map((r: any) => `
        <a href="/${r.collection}/${r.slug}" class="search-result-item">
          <div style="font-weight: 500; color: #0066cc;">${r.title}</div>
          <div style="font-size: 0.85rem; color: #666;">${r.excerpt || r.category}</div>
        </a>
      `).join('');
    }
  });
  
  // Close on escape
  input.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      resultsDiv.innerHTML = '';
      input.value = '';
    }
  });
  
  // Close on blur
  setTimeout(() => {
    input.addEventListener('blur', () => {
      setTimeout(() => resultsDiv.innerHTML = '', 200);
    });
  }, 100);
</script>

<style>
  .search-box {
    position: relative;
    margin: 0 1rem;
  }
  
  .search-input {
    padding: 0.5rem 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.9rem;
    width: 200px;
    outline: none;
  }
  
  .search-input:focus {
    border-color: #0066cc;
    box-shadow: 0 0 0 2px rgba(0, 102, 204, 0.1);
  }
  
  .search-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border: 1px solid #ddd;
    border-top: none;
    border-radius: 0 0 4px 4px;
    max-height: 300px;
    overflow-y: auto;
    z-index: 1000;
  }
  
  .search-result-item {
    display: block;
    padding: 0.75rem;
    border-bottom: 1px solid #eee;
    text-decoration: none;
    transition: background 0.15s;
  }
  
  .search-result-item:last-child {
    border-bottom: none;
  }
  
  .search-result-item:hover {
    background: #f5f5f5;
  }
</style>
