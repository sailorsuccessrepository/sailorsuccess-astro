---
// Pagefind Search Component
---

<div class="pagefind-container">
  <div id="search" class="pagefind-ui"></div>
</div>

<style>
  .pagefind-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  :global(.pagefind-ui) {
    --pagefind-ui-scale: 1;
    --pagefind-ui-primary: #3b82f6;
    --pagefind-ui-text: #1f2937;
    --pagefind-ui-background: #ffffff;
    --pagefind-ui-border: #e5e7eb;
    --pagefind-ui-tag: #f3f4f6;
    --pagefind-ui-border-width: 2px;
    --pagefind-ui-border-radius: 8px;
    --pagefind-ui-image-border-radius: 8px;
    --pagefind-ui-image-box-ratio: 3 / 2;
    --pagefind-ui-font: inherit;
  }

  :global(.pagefind-ui__search-input) {
    height: 3rem;
    font-size: 1.125rem;
    padding: 0 1rem;
  }

  :global(.pagefind-ui__result) {
    border: 2px solid var(--pagefind-ui-border);
    border-radius: 8px;
    margin-bottom: 1rem;
    padding: 1rem;
    transition: all 0.2s;
  }

  :global(.pagefind-ui__result:hover) {
    border-color: var(--pagefind-ui-primary);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }

  :global(.pagefind-ui__result-title) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--pagefind-ui-primary);
  }

  :global(.pagefind-ui__result-excerpt) {
    margin-top: 0.5rem;
    color: #6b7280;
  }

  @media (prefers-color-scheme: dark) {
    :global(.pagefind-ui) {
      --pagefind-ui-primary: #60a5fa;
      --pagefind-ui-text: #f3f4f6;
      --pagefind-ui-background: #1f2937;
      --pagefind-ui-border: #374151;
      --pagefind-ui-tag: #374151;
    }

    :global(.pagefind-ui__result-excerpt) {
      color: #9ca3af;
    }
  }
</style>

<script>
  import('@pagefind/default-ui').then((module) => {
    new module.PagefindUI({
      element: '#search',
      showSubResults: true,
      showImages: false,
      excerptLength: 15,
      resetStyles: false,
      bundlePath: '/pagefind/'
    });
  });
</script>
