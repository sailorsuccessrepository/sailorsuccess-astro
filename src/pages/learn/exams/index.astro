---
import { getCollection } from 'astro:content';
const learn = await getCollection('learn');
const matches = learn.filter(p => (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('exam') || (p.slug).includes('cet'));
---
<html><head><title>Exams & Certifications</title></head><body><h1>Exams & Certifications</h1>{matches.length ? <ul>{matches.map(p => <li><a href={`/learn/${p.slug}`}>{p.data.title || p.slug}</a></li>)}</ul> : <p>No guides found.</p>}</body></html>
