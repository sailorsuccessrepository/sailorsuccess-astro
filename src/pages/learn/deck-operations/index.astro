---
import { getCollection } from 'astro:content';
const learn = await getCollection('learn');
const matches = learn.filter(p => (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('deck'));
---
<html><head><title>Deck Operations</title></head><body><h1>Deck Operations</h1>{matches.length ? <ul>{matches.map(p => <li><a href={`/learn/${p.slug}`}>{p.data.title || p.slug}</a></li>)}</ul> : <p>No guides found.</p>}</body></html>
