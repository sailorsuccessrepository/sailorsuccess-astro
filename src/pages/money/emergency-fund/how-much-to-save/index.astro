---
import { getCollection } from 'astro:content';

const money = await getCollection('money');
const matches = money.filter(p => 
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('emergency') ||
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('fund') ||
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('save')
);
---

<html>
  <head>
    <title>How Much to Save for Emergency Fund</title>
  </head>
  <body>
    <h1>How Much to Save for Emergency Fund</h1>
    <p>Placeholder content. Related guides:</p>
    {matches.length ? (
      <ul>
        {matches.map(post => (
          <li><a href={`/money/${post.slug}`}>{post.data.title || post.slug}</a></li>
        ))}
      </ul>
    ) : (
      <p>Check financial planning resources.</p>
    )}
  </body>
</html>
