---
import { getCollection } from 'astro:content';

const money = await getCollection('money');
const matches = money.filter(p => 
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('tax') ||
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('salary')
);
---

<html>
  <head>
    <title>Tax Planning Guide for Seafarers</title>
  </head>
  <body>
    <h1>Tax Planning Guide for Seafarers</h1>
    <p>Placeholder content. Related salary & tax guides:</p>
    {matches.length ? (
      <ul>
        {matches.map(post => (
          <li><a href={`/money/${post.slug}`}>{post.data.title || post.slug}</a></li>
        ))}
      </ul>
    ) : (
      <p>Check tax planning resources.</p>
    )}
  </body>
</html>
