---
import { getCollection } from 'astro:content';

const careers = await getCollection('careers');
const matches = careers.filter(p => 
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('job') ||
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('hiring') ||
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('interview')
);
---

<html>
  <head>
    <title>Job Search in Merchant Navy</title>
  </head>
  <body>
    <h1>Job Search in Merchant Navy</h1>
    {matches.length ? (
      <ul>
        {matches.map(post => (
          <li><a href={`/careers/${post.slug}`}>{post.data.title || post.slug}</a></li>
        ))}
      </ul>
    ) : (
      <p>No job search articles found.</p>
    )}
  </body>
</html>
