---
import { getCollection } from 'astro:content';

const money = await getCollection('money');
const careers = await getCollection('careers');

const allSalary = [...money, ...careers].filter(p => 
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('salary') ||
  (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('merchant navy')
);
---

<html>
  <head>
    <title>Merchant Navy Salary India</title>
  </head>
  <body>
    <h1>Merchant Navy Salary India</h1>
    {allSalary.length ? (
      <ul>
        {allSalary.map(post => (
          <li><a href={`/${post.collection || 'careers'}/${post.slug}`}>{post.data.title || post.slug}</a></li>
        ))}
      </ul>
    ) : (
      <p>No salary articles found.</p>
    )}
  </body>
</html>
