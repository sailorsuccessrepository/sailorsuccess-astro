---
import { getCollection } from 'astro:content';
const rights = await getCollection('rights');
const matches = rights.filter(p => (p.slug + ' ' + (p.data.title || '')).toLowerCase().includes('legal') || (p.slug).includes('help'));
---
<html><head><title>Legal Help & Support</title></head><body><h1>Legal Help & Support</h1>{matches.length ? <ul>{matches.map(p => <li><a href={`/rights/${p.slug}`}>{p.data.title || p.slug}</a></li>)}</ul> : <p>No guides found.</p>}</body></html>
